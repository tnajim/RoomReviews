<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Update Hotel</h1>
        <div class="col-6 offset-3">
            <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hotel[title]" autocomplete="off" value="<%= hotel.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="hotel[location]" autocomplete="off" value="<%= hotel.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Hotel Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input class="form-control" type="text" id="price" name="hotel[price]" placeholder="0.00" value="<%= hotel.price %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hotel[description]"
                        autocomplete="off" required><%= hotel.description %></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                </div>
                <div class="mb-3">
                    <label for="image-form" class="form-label">Update Images</label>
                    <input class="form-control" type="file" name="image" id="image-form" multiple>
                </div>
                <div class="mb-3">
                    <% hotel.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                    <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Hotel</button>
                </div>
            </form>
            <a href="/hotels/<%= hotel._id %>">Back to Hotel</a>
        </div>
    </div>