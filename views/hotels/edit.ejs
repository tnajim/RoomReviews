<% layout('layouts/boilerplate') %>
    <h1>Edit Hotel</h1>
    <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="hotel[title]" value="<%= hotel.title %>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="hotel[location]" value="<%= hotel.location %>">
        </div>
        <button>Save Hotel</button>
    </form>
    <a href="/hotels/<%= hotel._id %>">Back to Hotel</a>