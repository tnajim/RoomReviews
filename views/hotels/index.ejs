<% layout('layouts/boilerplate') %>
<h1>All Hotels</h1>
<div>
    <a href="/hotels/new">Add Hotel</a>
</div>
<ul>
    <% for (let hotel of hotels) { %>
        <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%= hotel.images[0].url %>" class="img-fluid rounded-start" alt="image of a hotel">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= hotel.title %></h5>
                  <p class="card-text"><%= hotel.description %></p>
                  <p class="card-text"><small class="text-body-secondary"><%= hotel.location %></small></p>
                  <a class="btn btn-primary" href="/hotels/<%= hotel._id %>">View <%= hotel.title %></a>
                </div>
              </div>
            </div>
          </div>
        <% } %>
</ul>