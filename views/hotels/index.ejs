<% layout('layouts/boilerplate') %>

<div id="cluster-map" class="mb-3"></div>

<div id="pagination-navbar">
  <nav aria-label="Page Navigation">
    <ul class="pagination">
      <li class="page-item"><a class="page-link <%= CurrentPage === 1 ? 'disabled' : '' %>" href="/hotels?page=<%= CurrentPage - 1 %>">Previous</a></li>
      <li class="page-item"><a class="page-link <%= CurrentPage === 1 ? 'active' : '' %>" href="/hotels?page=1">1</a></li>
      <li class="page-item"><a class="page-link <%= CurrentPage === 2 ? 'active' : '' %>" href="/hotels?page=2">2</a></li>
      <li class="page-item"><a class="page-link <%= CurrentPage === 3 ? 'active' : '' %>" href="/hotels?page=3">3</a></li>
      <li class="page-item"><a class="page-link <%= CurrentPage === 4 ? 'active' : '' %>" href="/hotels?page=4">4</a></li>
      <li class="page-item"><a class="page-link <%= CurrentPage === 5 ? 'active' : '' %>" href="/hotels?page=5">5</a></li>
      <li class="page-item"><a class="page-link <%= CurrentPage === totalPages ? 'disabled' : '' %>" href="/hotels?page=<%= CurrentPage + 1 %>">Next</a></li>
    </ul>
  </nav>
</div>

  <div id="hotels-container">
    <% for (let hotel of hotels) { %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <% if (hotel.images.length) { %>
              <img crossorigin="anonymous" src="<%= hotel.images[0].url %>" class="img-fluid rounded-start" alt="image of a hotel">
              <% } else { %>
                <img crossorigin="anonymous" src="https://res.cloudinary.com/dtntqvwwe/image/upload/v1684402364/RoomReviews/rcccglj4wp5b7purrrlh.jpg"
                  class="img-fluid rounded-start" alt="image of a hotel">
                <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= hotel.title %>
              </h5>
              <p class="card-text">
                <%= hotel.description %>
              </p>
              <p class="card-text"><small class="text-body-secondary">
                  <%= hotel.location %>
                </small></p>
              <a class="btn btn-primary" href="/hotels/<%= hotel._id %>">View <%= hotel.title %></a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
  </div>

  <div id="pagination-navbar" class="float-end">
    <nav aria-label="Page Navigation">
      <ul class="pagination">
        <li class="page-item"><a class="page-link <%= CurrentPage === 1 ? 'disabled' : '' %>" href="/hotels?page=<%= CurrentPage - 1 %>">Previous</a></li>
        <li class="page-item"><a class="page-link active" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="/hotels?page=2">2</a></li>
        <li class="page-item"><a class="page-link" href="/hotels?page=3">3</a></li>
        <li class="page-item"><a class="page-link" href="/hotels?page=4">4</a></li>
        <li class="page-item"><a class="page-link" href="/hotels?page=5">5</a></li>
        <li class="page-item"><a class="page-link <%= CurrentPage === totalPages ? 'disabled' : '' %>" href="/hotels?page=<%= CurrentPage + 1 %>">Next</a></li>
      </ul>
    </nav>
  </div>

  <script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const hotels = {features: <%- JSON.stringify(allHotels) %>}
  </script>
  <script src="/javascripts/clusterMap.js"></script>